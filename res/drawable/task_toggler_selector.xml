<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="oval">
            <solid android:color="@color/task_pressed" />

            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />

            <corners android:bottomLeftRadius="65dp" android:bottomRightRadius="65dp" android:topLeftRadius="65dp" android:topRightRadius="65dp" />
        </shape></item>
    <item android:state_checked="true"><shape android:shape="oval">
            <solid android:color="@color/finished_task_color" />

            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />

            <corners android:bottomLeftRadius="65dp" android:bottomRightRadius="65dp" android:topLeftRadius="65dp" android:topRightRadius="65dp" />
        </shape></item>
    <item android:state_checked="false"><shape android:shape="oval">
            <solid android:color="@color/unfinished_task_color" />

            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />

            <corners android:bottomLeftRadius="65dp" android:bottomRightRadius="65dp" android:topLeftRadius="65dp" android:topRightRadius="65dp" />
        </shape></item>

</selector>