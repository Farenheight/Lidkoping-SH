<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabDrawingContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/orderDrawing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/order_drawing"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/orderDrawingProgressBar"
         style="?android:attr/progressBarStyleLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1" />

      <LinearLayout
          android:id="@+id/no_images_found_card"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@drawable/card_border_shape"
          android:orientation="vertical"
          android:padding="@dimen/default_padding"
          android:visibility="gone" >

          <TextView
              android:id="@+id/task_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/no_images_found"
              android:textSize="30sp" 
              android:textColor="#555"/>
      </LinearLayout>

</LinearLayout>