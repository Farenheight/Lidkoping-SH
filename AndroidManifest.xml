<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.chalmers.lidkopingsh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="Test"
        android:targetPackage="com.example.lidkopingsh" >
    </instrumentation>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="se.chalmers.lidkopingsh.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustNothing" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.chalmers.lidkopingsh.HandsetsDetailsActivity"
            android:label="@string/title_stone_detail"
            android:parentActivityName="se.chalmers.lidkopingsh.MainActivity"
            android:windowSoftInputMode="adjustNothing" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StoneListActivity" />
        </activity>

        <uses-library android:name="android.test.runner" />
    </application>

</manifest>